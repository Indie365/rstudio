set -e

cd ../common

# gwt
./install-gwt

# boost
./install-boost

# dictionaries
./install-dictionaries

# mathjax
./install-mathjax

cd ../osx

# enable PAM
sudo cp /etc/pam.d/ftpd /etc/pam.d/rstudio
