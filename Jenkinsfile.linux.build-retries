          push: env.BRANCH_IS_PRIMARY
        ) */
      }
    }

    stage('Build and Upload') {
      /* agent {
        docker {
          image "jenkins/ide:${os}-${arch}-${env.BRANCH_NAME.replaceAll('/', '-')}"
          reuseNode true
        }
